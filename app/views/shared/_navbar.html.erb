<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to candidates_path, class: "navbar-wagon-brand" do %>
    <%#= image_tag "https://storage.googleapis.com/photos-illustration/logo-mob.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

<!-- <div><strong><%= current_user.last_name %>  <%= current_user.role.code %></strong></div>-->      
    <% if current_user.candidate.nil?%>
        <%= link_to 'Ma candidature', new_candidate_path, class:'text-nav-bar' %>  
      <% elsif !current_user.candidate.nil?%>  
        <%= link_to 'Ma candidature', candidate_path(current_user.candidate), class:'text-nav-bar'%>  
      <% end %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
      <%= link_to destroy_user_session_path, method: :delete, class:'text-nav-bar' do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "DÃ©connexion") %>
      <% end %>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
        <% end %>
      <% else %>
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>
  </div>
</div>

